<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Activity.UserActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/hello_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="欢迎"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/send_imageButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:scaleType="centerCrop"
                android:src="@drawable/send" />

            <Button
                android:id="@+id/send_button"
                android:background="@drawable/button_circle_shape_01"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                android:text="快 件 投 递"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/get_Ibutton"
                android:scaleType="centerCrop"
                android:layout_width="64dp"
                android:layout_marginTop="45dp"
                android:layout_height="64dp"
                android:layout_marginLeft="5dp"
                android:background="#ffffff"
                android:src="@drawable/get" />
            <Button
                android:id="@+id/get_button"
                android:background="@drawable/button_circle_shape_02"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="10dp"
                android:text="快 件 收 取"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/record_Ibutton"
                android:scaleType="centerCrop"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="5dp"
                android:background="#ffffff"
                android:src="@drawable/record" />
            <Button
                android:id="@+id/record_button"
                android:background="@drawable/button_circle_shape_03"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="40dp"
                android:text="投 递 记 录"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/info_Ibutton"
                android:scaleType="centerCrop"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="5dp"
                android:background="#ffffff"
                android:src="@drawable/information" />
            <Button
                android:id="@+id/info_button"
                android:background="@drawable/button_circle_shape_04"
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                android:text="格 口 信 息"
                android:textSize="16sp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/logout_button"
                android:background="@drawable/button_circle_shape_05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:text="退 出 登 录"
                android:textSize="18sp"
                android:textColor="#ffffff"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>